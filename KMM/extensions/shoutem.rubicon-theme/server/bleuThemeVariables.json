{
  "title": "Rubicon Prime",
  "formats": {
    "font": {
      "default": {
        "fontFamily": "Rubik-Regular",
        "fontStyle": "normal",
        "fontWeight": "normal",
        "fontSize": 20,
        "color": "#222222"
      },
      "constraints": {
        "fontFamily": {
          "enum": [ "Rubik-Regular", "NotoSans", "NotoSerif", "MuktaVaani-Regular"]
        },
        "fontStyle": {
          "enum": ["normal", "italic"]
        },
        "fontWeight": {
          "enum": ["normal", "bold", "100", "200", "300", "400", "500", "600", "700", "800", "900"]
        },
        "fontSize": {
          "minimum": 10,
          "maximum": 48
        }
      }
    }
  },
  "properties": {



    "featuredColor": {
      "type": "string",
      "title": "Featured color - main color of the app",
      "format": "color",
      "default": "#659CEC"
    },
    "backgroundColor": {
      "type": "string",
      "title": "Background color - overall app background color",
      "format": "color",
      "default": "#f2f2f2"
    },
    "paperColor": {
      "type": "string",
      "title": "Paper background color - most individual screen components and placeholders",
      "format": "color",
      "default": "#FFFFFF"
    },
    "shadowColor": {
      "type": "string",
      "title": "Shadow color",
      "format": "color",
      "default": "rgba(0, 0, 0, 0.1)"
    },



    "heading": {
      "type": "object",
      "title": "Heading",
      "format": "font",
      "default": {
        "fontSize": 25
      },
      "constraints": {
        "fontSize": {
          "minimum": 20,
          "maximum": 40
        }
      }
    },
    "title": {
      "type": "object",
      "title": "Title",
      "format": "font",
      "constraints": {
        "fontSize": {
          "minimum": 15,
          "maximum": 35
        }
      }
    },
    "subtitle": {
      "type": "object",
      "title": "Subtitle",
      "format": "font",
      "default": {
        "fontSize": 15
      },
      "constraints": {
        "fontSize": {
          "maximum": 25
        }
      }
    },
    "caption": {
      "type": "object",
      "title": "Caption",
      "format": "font",
      "default": {
        "fontSize": 12,
        "color": "#666666"
      },
      "constraints": {
        "fontSize": {
          "minimum": 12,
          "maximum": 25
        }
      }
    },
    "text": {
      "type": "object",
      "title": "Text",
      "format": "font",
      "default": {
        "fontSize": 15,
        "color": "#666666"
      },
      "constraints": {
        "fontSize": {
          "minimum": 12,
          "maximum": 25
        }
      }
    },

    "tagOverlayColor": {
      "type": "string",
      "title": "Default overlay color",
      "format": "color",
      "default": "rgba(0, 0, 0, 0.5)"
    },
    "tagOverlayTextColor": {
      "type": "string",
      "title": "Text and Icon color on default overlays",
      "format": "color",
      "default": "#FFFFFF"
    },
    "imageOverlayColor": {
      "type": "string",
      "title": "Image overlay color",
      "format": "color",
      "default": "rgba(0, 0, 0, 0.2)"
    },
    "imageOverlayTextColor": {
      "type": "string",
      "title": "Text and Icon color on images with overlays",
      "format": "color",
      "default": "#FFFFFF"
    },


    "navBarBackground": {
      "type": "string",
      "title": "Background color",
      "format": "color",
      "default": "#FFFFFF"
    },
    "navBarBorderColor": {
      "type": "string",
      "title": "Header bottom border color",
      "format": "color",
      "default": "#f2f2f2"
    },
    "navBarText": {
      "type": "object",
      "title": "Title",
      "format": "font",
      "default": {
        "fontSize": 15
      }
    },
    "statusBarColor": {
      "type": "string",
      "title": "Notch status bar color (used when background image is present)",
      "format": "color",
      "default": "#000"
    },
    "navBarIconsColor": {
      "type": "string",
      "title": "Icons color",
      "format": "color",
      "default": "#222222"
    },
    "featuredNavBarTitleColor": {
      "type": "string",
      "title": "Title color for featured layouts",
      "format": "color",
      "default": "#ffffff"
    },
    "featuredNavBarIconsColor": {
      "type": "string",
      "title": "Icons color for featured layouts",
      "format": "color",
      "default": "#ffffff"
    },



    "mainNavBackground": {
      "type": "string",
      "title": "Background color",
      "format": "color",
      "default": "#FFFFFF"
    },
    "mainNavItemColor": {
      "type": "string",
      "title": "Item text and icons color",
      "format": "color",
      "default": "rgba(50, 50, 50, 0.4)"
    },
    "mainNavItemBackground": {
      "type": "string",
      "title": "Item background color",
      "format": "color",
      "default": "rgba(0, 0, 0, 0)"
    },
    "mainNavSelectedItemBackground": {
      "type": "string",
      "title": "Selected item background color",
      "format": "color",
      "default": "#FFFFFF"
    },
    "mainNavSelectedItemColor": {
      "type": "string",
      "title": "Selected item text and icon color",
      "format": "color",
      "default": "#222222"
    },
    "mainNavSelectedItemBorderColor": {
      "type": "string",
      "title": "Tab Bar selected item border color",
      "format": "color",
      "default": "#659CEC"
    },
    "mainNavBorderColor": {
      "type": "string",
      "title": "Tab Bar border color",
      "format": "color",
      "default": "#e0e0e0"
    },



    "subNavItemColor": {
      "type": "string",
      "title": "Item text and icon color",
      "format": "color",
      "default": "#666666"
    },
    "subNavItemBackground": {
      "type": "string",
      "title": "Item background color",
      "format": "color",
      "default": "rgba(0, 0, 0, 0)"
    },
    "subNavListBorderColor": {
      "type": "string",
      "title": "List layout border color",
      "format": "color",
      "default": "#e0e0e0"
    },



    "primaryButtonText": {
      "type": "object",
      "title": "Primary text",
      "format": "font",
      "default": {
        "fontWeight": "600",
        "fontSize": 12,
        "color": "#222222"
      }
    },
    "primaryButtonBackgroundColor": {
      "type": "string",
      "title": "Primary background color",
      "format": "color",
      "default": "#FFFFFF"
    },
    "primaryButtonBorderColor": {
      "type": "string",
      "title": "Primary button border color",
      "format": "color",
      "default": "#FFFFFF"
    },
    "secondaryButtonTextColor": {
      "type": "string",
      "title": "Secondary button text color",
      "format": "color",
      "default": "#FFFFFF"
    },
    "secondaryButtonBackgroundColor": {
      "type": "string",
      "title": "Secondary button background color",
      "format": "color",
      "default": "#659CEC"
    },
    "secondaryButtonBorderColor": {
      "type": "string",
      "title": "Secondary button border color",
      "format": "color",
      "default": "rgba(101, 156, 236, 0)"
    },



    "lineColor": {
      "type": "string",
      "title": "Line color - between list items",
      "format": "color",
      "default": "#e5e5e5"
    },
    "indicatorColor": {
      "type": "string",
      "title": "Loyalty horseshoe, notification dots and page indicators",
      "format": "color",
      "default": "#659CEC"
    },
    "sectionHeaderBackgroundColor": {
      "type": "string",
      "title": "Section header background color - details screens",
      "format": "color",
      "default": "#F2F2F2"
    }



  },
  "layout": {
    "sections": [
      {
        "title": "Basic colors",
        "properties": [
          "featuredColor",
          "backgroundColor",
          "paperColor",
          "shadowColor"
        ]
      },
      {
        "title": "Navigation bar (header)",
        "properties": [
          "statusBarColor",
          "navBarText",
          "navBarIconsColor",
          "featuredNavBarTitleColor",
          "featuredNavBarIconsColor",
          "navBarBackground",
          "navBarBorderColor"
        ]
      },
      {
        "title": "Tab Bar and Drawer layouts",
        "properties": [
          "mainNavBackground",
          "mainNavItemColor",
          "mainNavItemBackground",
          "mainNavBorderColor",
          "mainNavSelectedItemColor",
          "mainNavSelectedItemBackground",
          "mainNavSelectedItemBorderColor"
        ]
      },
      {
        "title": "List, Card list, Icon grid and Tile grid layouts",
        "properties": [
          "subNavItemColor",
          "subNavItemBackground",
          "subNavListBorderColor"
        ]
      },
      {
        "title": "Typography",
        "properties": [
          "heading",
          "title",
          "subtitle",
          "caption",
          "text"
        ]
      },
      {
        "title": "Buttons",
        "properties": [
          "primaryButtonText",
          "primaryButtonBackgroundColor",
          "primaryButtonBorderColor",
          "secondaryButtonTextColor",
          "secondaryButtonBackgroundColor",
          "secondaryButtonBorderColor"
        ]
      },
      {
        "title": "Overlays",
        "properties": [
          "tagOverlayColor",
          "tagOverlayTextColor",
          "imageOverlayColor",
          "imageOverlayTextColor"
        ]
      },
      {
        "title": "Miscellaneous",
        "properties": [
          "lineColor",
          "indicatorColor",
          "sectionHeaderBackgroundColor"
        ]
      }
    ]
  }
}
